<?xml version='1.0' encoding='utf-8'?>
<widget id="me.airspire.app" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Airspire</name>
    <description>
        The Airspire XC App
    </description>
    <author email="rob@intgroen.net" href="http://airspire.me">
        Rob in t Groen
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<icon src="www/img/airspire_logo_144x144.png" />
	<splash src="www/img/splash.png" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <gap:plugin name="cordova-plugin-googlemaps" source="npm">
	<param name="API_KEY_FOR_ANDROID" value="AIzaSyA_FQ6iA22kIATazPcZ2hGGaKFOJSC629k" />
	<param name="API_KEY_FOR_IOS" value="AIzaSyBuaDEJP146RXm6SYTrNWlGAHfURY_9r2U" />
    </gap:plugin>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-geolocation" />
    <plugin name="cordova-plugin-googlemaps" />
    <plugin name="cordova-plugin-device-orientation" />
    <plugin name="cordova-plugin-inappbrowser" />
</widget>
