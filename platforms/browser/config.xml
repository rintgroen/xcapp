<?xml version='1.0' encoding='utf-8'?>
<widget id="me.airspire.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Airspire</name>
    <description>
        The Airspire XC App
    </description>
    <author email="rob@intgroen.net" href="http://airspire.me">
        Rob in t Groen
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/airspire_logo_144x144.png" />
    <splash src="www/img/splash.png" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
